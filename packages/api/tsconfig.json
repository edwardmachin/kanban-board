{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@api/*": ["./src/*"],
			"@ui/*": ["../ui/src/*"]
		}
	},
	"include": ["./src/**/*"],
	// "exclude": ["**/*.test.ts", "**/*.spec.ts", "**/__tests__/*", "**/tests/*"]
}
